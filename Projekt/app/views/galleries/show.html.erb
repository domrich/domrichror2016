<p id="notice"><%= notice %></p>

<% if !user_signed_in? %>
<p> Login to create your own galleries </p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @gallery.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@gallery.image.big.url) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @gallery.description %>
</p>
<p>
  <h3>Linked categories</h3>
  <%= @gallery.categories.map {|c| c.name}.join(', ') %>
</p>
<div id="comments">
  <h2><%= @gallery.comments.count %> Comments</h2>
  <%= render @gallery.comments %>
  <h2> Write a Comment!</h2>
  <%= render "comments/form" %>
</div>
<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back', galleries_path %>
